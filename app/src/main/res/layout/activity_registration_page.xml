<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9B872"
    tools:context=".RegistrationPage">

    <ImageView
        android:id="@+id/DropdownArrow"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/appsplashicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DropdownArrow"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/TransportMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="TransportMe"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/signinMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Please sign in to continue"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/reg_FullName"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="16dp"
            android:hint="Full Name"
            android:textColorHint="#E9B872"
            android:fontFamily="@font/inter_bold"
            android:inputType="textPersonName"/>
        <EditText
            android:id="@+id/reg_Email"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:hint="Email"
            android:textColorHint="#E9B872"
            android:fontFamily="@font/inter_bold"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/reg_Password"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:hint="Password"
            android:textColorHint="#E9B872"
            android:fontFamily="@font/inter_bold"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/registerbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold"
            android:text="Sign up"
            android:padding="16dp"
            android:backgroundTint="#A63D40"/>
        <Button
            android:id="@+id/gotologinpage"
            android:backgroundTint="#E9B872"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="30dp"
            android:text="Already have an account? Login"
            android:textSize="15dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>