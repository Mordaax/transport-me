<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.np.mad.transportme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".ReminderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TransportMe"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".PrivacyPolicyActivty"
            android:exported="false" />
        <activity
            android:name=".InsightsActivity"
            android:exported="false" />
        <activity
            android:name=".views.CarparkActivity"
            android:exported="true" />
        <activity
            android:name=".Route"
            android:exported="false" />
        <activity
            android:name=".AddExpenseActivity"
            android:exported="true" />
        <activity
            android:name=".WeekActivity"
            android:exported="true" />
        <activity
            android:name=".user.RegistrationPage"
            android:exported="false"
            android:parentActivityName=".user.LoginPage" />
        <activity
            android:name=".user.LoginPage"
            android:exported="true" />
        <activity
            android:name=".views.LoadingScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC5TLFoQWmsorYN0--un6BieG6VI2STONE" />

        <activity
            android:name=".views.MainActivity"
            android:exported="false" />
        <service android:name=".ReminderService"/>
    </application>

</manifest>